#include <stdio.h>

int main() {
    int N, original, invertido = 0, digito;

    printf("Ingrese un numero entero: ");
    scanf("%d", &N);

    original = N; 

    while (N != 0) {
        digito = N % 10;
        invertido = invertido * 10 + digito;
        N /= 10;
    }

    if (original == invertido)
        printf("El numero es capicua.\n");
    else
        printf("El numero NO es capicua.\n");

    return 0;
}
