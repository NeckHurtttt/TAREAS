#include <stdio.h>

int main() {
    int N, digito;
    int valido = 1; 

    printf("Ingrese un numero en base 8: ");
    scanf("%d", &N);

    while (N != 0) {
        digito = N % 10;
        if (digito >= 8) {
            valido = 0;
            break; 
        }
        N /= 10;
    }

    if (valido)
        printf("Todos los digitos pertenecen a la base 8.\n");
    else
        printf("El numero tiene digitos fuera de la base 8.\n");

    return 0;
}
